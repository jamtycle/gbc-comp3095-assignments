{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run-assignment1-linux-x64",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/assignment1/assignment1.csproj",
                "--arch",
                "x64",
                "--os",
                "linux"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-a1",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/assignment1/assignment1.csproj",
                "-property:GenerateFullPaths=true",
                "-consoleloggerparameters:NoSummary",
                "--arch",
                "x64",
                "--os",
                "linux",
                "--use-current-runtime"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}