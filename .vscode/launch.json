{
    "version": "0.2.0",
    "configurations": [
        {   
            "name": "Assignment 1",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-a1",
            "program": "${workspaceFolder}/assignment1/bin/Debug/net6.0/linux-x64/assignment1.dll",
            "args": [], 
            "cwd": "${workspaceFolder}/assignment1",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}