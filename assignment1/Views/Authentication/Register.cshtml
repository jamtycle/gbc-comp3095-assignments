@model assignment1.Models.RegistrationModel;

@{
    ViewData["Title"] = "Register";
}


<a asp-action="Index" asp-controller="Home" class="btn btn-primary btn-lg btn-floating">
    <i class="fas fa-angle-left"></i>
</a>

