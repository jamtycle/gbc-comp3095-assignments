@model assignment1.Models.LayoutModel<IEnumerable<assignment1.Models.Auction.AuctionModel>>;


@{
    ViewData["Title"] = "Search Results";
}

<div id="SearchBar">
    <table class="SearchBarTable">
        <tbody>
            <td>
                <form asp-action="Search" asp-route-id="search" method="get">
                    <input id="SearchBar-textfield" name="search" type="text" placeholder="Search" />
                </form>   
            </td>
            <td>
                <div>
                    <select>
                        <option value="0">AllCategories</option>
                    </select>
                </div>
             </td>
        </tbody>
    </table>
</div>

<h2>Search results for: @ViewBag.Search</h2>

<div>
    <ul>
        @if (Model != null)
        {
            @foreach (var item in @ViewBag.Data)
            {
                <li>
                    <a asp-controller="Auction" asp-action="AuctionPage" asp-route-aid="@item.Auction_id">@item.Auction_name</a>
                </li>
            }
            
        }
    </ul>
</div>