@model assignment1.Models.LayoutModel<assignment1.Models.Home.SearchModel>;


@{
    ViewData["Title"] = "Search Results";
}

<form asp-action="Search" asp-route-id="search" method="GET">
    <div class="input-group">
        <div class="form-outline">
            <input type="search" id="search" name="search" class="form-control" value="@Model.Data.SearchText" />
            <label class="form-label" for="search">Search</label>
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i>
        </button>
    </div>
</form>

<br>
<br>

<ul class="list-group list-group-light row">
    @foreach (var auction in @Model?.Data?.Search)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="card" style="width: 15rem;">
                <img src="@auction.Base64Image" alt="@auction.AuctionName" class="card-img-top" />
                <div class="ms-3 card-body">
                    <a class="fw-bold mb-1 card-title" asp-controller="Auction" asp-action="AuctionPage"
                    asp-route-aid="@auction.AuctionId">@auction.AuctionName</a>
                    <p class="text-muted mb-0 card-text">Start Price: @auction.StartPrice.ToString("C3")</p>
                    <p class="text-muted mb-0 card-text">Buy Now: @auction.BuyNowPrice.ToString("C3")</p>
                    <p class="text-muted mb-0 card-footer">End Date: @auction.EndDate.Date.ToString("dd/MM/yyyy @ HH:mm:ss")</p>
                    <span class="badge rounded-pill badge-success card-footer">Active</span>
                </div>
            </div>
        </li>
    }
</ul>
