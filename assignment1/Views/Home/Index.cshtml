<ul class="list-group list-group-light">
    @foreach (var auction in @Model?.Data?.AuctionList)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <img src="" alt="" style="width: 45px; height: 45px" class="rounded-circle" />
                <div class="ms-3">
                    <a class="fw-bold mb-1" asp-controller="Auction" asp-action="AuctionPage" asp-route-aid="@auction.AuctionId">@auction.AuctionName</a>
                    @* <p class="fw-bold mb-1">@auction.AuctionName</p> *@
                    <p class="text-muted mb-0">Start Price: @auction.StartPrice - Buy Now: @auction.BuyNowPrice</p>
                    <p class="text-muted mb-0">End Date: @auction.EndDate.Date.ToShortDateString()</p>
                </div>
            </div>
            <span class="badge rounded-pill badge-success">Active</span>
        </li>
    }
</ul>
