@{
    ViewData["Title"] = ViewBag.PageTitle;
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@ViewBag.Title</h5>
        <p class="card-text">@ViewBag.Message</p>
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">@ViewBag.ButtonText</a>
    </div>
</div>